<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                           http://www.springframework.org/schema/security
                           http://www.springframework.org/schema/security/spring-security-4.0.xsd">

        <bean id="authenticationManager" class="org.springframework.security.authentication.ProviderManager">
            <property name="eraseCredentialsAfterAuthentication" value="false"/>
            <constructor-arg>
                <list>
                    <ref bean="userAuthenticationProvider" />
                </list>
            </constructor-arg>
        </bean>

       <bean id="userAuthenticationProvider" class="by.bsu.rfe.smsservice.security.provider.UserAuthenticationProvider"/>
       <bean id="authenticationFilter" class="by.bsu.rfe.smsservice.security.filter.AuthenticationTokenFilter"/>
       <bean id="unauthorizedEntryPoint" class="by.bsu.rfe.smsservice.security.UnauthorizedEntryPoint"/>

       <security:http auto-config="false" authentication-manager-ref="authenticationManager"
                      use-expressions="true" entry-point-ref="unauthorizedEntryPoint">
              <security:custom-filter ref="authenticationFilter" position="FORM_LOGIN_FILTER"/>
              <security:intercept-url pattern="/rest/user/authenticate" access="permitAll()"/>
              <security:intercept-url pattern="/rest/sms/interview" access="permitAll()"/>
              <security:intercept-url pattern="/**" access="isAuthenticated()"/>
              <security:csrf disabled="true"/>
       </security:http>
</beans>